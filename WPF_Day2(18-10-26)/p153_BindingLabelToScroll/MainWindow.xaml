<Window x:Class="p153_BindingLabelToScroll.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Label, ScrollBar 데이터바인딩" Height="350" Width="525">
    <StackPanel>
        <ScrollBar Name="scrollbar" Orientation="Horizontal" Margin="24"
                   Maximum="100" LargeChange="10" SmallChange="1"/>
        
        <Label HorizontalAlignment="Center" Name="label" />
    </StackPanel>
</Window>
